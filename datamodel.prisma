type Bike {
  id: ID! @unique
  modelId: Int!
  price: Int!
  photos: [String!]
  rating: Float @default(value: 0)
  reviewsCount: Int @default(value: 0)
  manufactureYear: Int
  mileage: Int @default(value: 0)
  reviews: [Review!]!
  bookings: [Booking!]!
}

type Review {
  id: ID! @unique
  rating: Int!
  comment: String
  createdAt: DateTime!
  userUid: String!
  bike: Bike!
}

enum BookingStatus {
  WAITING_CONFIRMATION
  CONFIRMED
  CANCELED
}

type Booking {
  id: ID! @unique
  userUid: String!
  startDate: DateTime!
  endDate: DateTime!
  deliveryTime: DateTime
  deliveryLocationLongitude: String!
  deliveryLocationLatitude: String!
  deliveryLocationComment: String
  status: BookingStatus! @default(value: "WAITING_CONFIRMATION")
  bike: Bike!
}
